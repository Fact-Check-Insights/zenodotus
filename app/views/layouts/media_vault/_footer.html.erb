<footer id="site-footer">
	<div id="site-footer__about">
		<%= link_to use_svg("media-vault-logo", title: "MediaVault", svg_attrs: { id: "site-footer__logo", width: 180, height: 77, role: "img" }), root_path %>
		<div id="site-footer__legal">
			<p><%= t("layouts.footer.is_a_project_of",
									media_review_link: link_to("MediaVault", root_path),
									full_fact_link: link_to("Full Fact", "https://fullfact.org/"),
									maldita_link: link_to("Maldita.es", "https://maldita.es/")).html_safe %></p>
			<p><%= t("layouts.footer.copyright",
									current_year: l(Date.today, format: "%Y"),
					 				creative_commons_link: link_to("CC BY", "https://creativecommons.org/licenses/by/4.0/")).html_safe %></p>
		</div>
	</div>

	<nav id="site-footer__nav--primary" class="site-footer__nav">
		<ol>
			<% if user_signed_in? %>
				<% if current_user.can_access_media_vault? %>
					<li><%= link_to t("layouts.footer.dashboard"), media_vault_dashboard_path %></li>
					<li><%= link_to t("layouts.footer.guide_to_the_data"), media_vault_guide_path %></li>
				<% else %>
					<li><%= t("layouts.footer.request_access_tbd") %></li>
				<% end %>
			<% else %>
				<li><%= link_to t("layouts.footer.request_access"), new_applicant_path %></li>
				<li><%= link_to t("layouts.footer.log_in"), new_user_session_path %></li>
			<% end %>
			<li><%= link_to t("layouts.footer.about"), about_path %></li>
			<li><%= link_to t("layouts.footer.contact"), contact_path %></li>
		</ol>
	</nav>

	<nav id="site-footer__nav--secondary" class="site-footer__nav">
		<ol>
			<li><%= link_to t("layouts.footer.terms_and_conditions"), terms_path %></li>
			<li><%= link_to t("layouts.footer.privacy_policy"), privacy_path %></li>
			<li><%= link_to t("layouts.footer.opt_out"), media_vault_optout_path %></li>
			<%# <li><%= link_to "GitHub", "https://github.com/TechAndCheck/zenodotus/" %></li>
			<li><%= link_to "Fact-Check Insights", fact_check_insights_root_url %></li>
		</ol>
	</nav>

	<nav id="site-footer__nav--logos" class="site-footer__nav">
		<ol>
			<li>
				<%= link_to "https://fullfact.org/" do %>
					<%= image_tag "logos/full-fact-logo.png", size: "96x60", alt: "Full Fact", id: "site-footer__full-fact-logo" %>
				<% end %>
			</li>
			<li>
				<%= link_to "https://fundacionmaldita.es/en" do %>
					<%= image_tag "logos/maldita-logo.png", size: "167x60", alt: "Maldita.es", id: "site-footer__maldita-logo" %>
				<% end %>
			</li>
		</ol>
	</nav>

</footer>
